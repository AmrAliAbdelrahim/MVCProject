@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div asp-validation-summary="All" class="text-danger"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail" method="post">
			<input class="text" asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email"></span>
			<br />
			<input type="submit" value="Reset Password">
		</form>
		<p>Do not You Have An Account?<a asp-action="Register">SignUp Now!</a></p>
		<p> <a asp-action="ForgetPassword">Forget Password</a></p>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}


